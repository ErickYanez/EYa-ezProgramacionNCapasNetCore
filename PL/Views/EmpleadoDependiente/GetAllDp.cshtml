@model ML.Dependiente
@{
    ViewData["Title"] = "GetAllDp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Lista de dependientes</h2>
    <p>Aqui puede ver, editar o agregar a un dependiente</p>
    <p>Para agregar a un dependiente presione el boton verde</p>
    <p>Para editar a un dependiente presione el boton azul</p>
    <p>Para eliminar a un dependiente presione el boton rojo</p>
    <p>Para buscar a un dependiente presione el boton amarillo</p>
    <hr />

    <div class="row">
        <div style="float:right">
            @Html.ActionLink("+", "Form", "Dependiente", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>

