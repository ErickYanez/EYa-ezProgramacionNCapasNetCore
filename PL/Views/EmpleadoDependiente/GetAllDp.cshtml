    <div class="row mt-5">
        <table class="table table-responsive" id="tblDependiente">
            <thead class="table-dark">
                <tr>
                    <th>
                        IdDependiente
                    </th>
                    <th>
                        Nombre Empleado
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Apellido Paterno
                    </th>
                    <th>
                        Apellido Materno
                    </th>
                    <th>
                        Fecha de Nacimiento
                    </th>
                    <th>
                        Estado Civil
                    </th>
                    <th>
                        Genero
                    </th>
                    <th>
                        Telefono
                    </th>
                    <th>
                        RFC
                    </th>
                    <th>
                        Tipo de dependiente
                    </th>
                    <th>
                        Editar
                    </th>
                    <th>
                        Eliminar
                    </th>
                </tr>
            </thead>
            <tbody class="table-info">
                @foreach (ML.Dependiente dependiente in Model.Dependientes)
                {
                    <tr>
                        <td>
                            @dependiente.IdDependiente
                        </td>
                        <td>
                            @dependiente.Empleado.Nombre @dependiente.Empleado.ApellidoPaterno @dependiente.Empleado.ApellidoMaterno
                        </td>
                        <td>
                            @dependiente.Nombre
                        </td>
                        <td>
                            @dependiente.ApellidoPaterno
                        </td>
                        <td>
                            @dependiente.ApellidoMaterno
                        </td>
                        <td>
                            @dependiente.FechaNacimiento
                        </td>
                        <td>
                            @dependiente.EstadoCivil
                        </td>
                        <td>
                            @dependiente.Genero
                        </td>
                        <td>
                            @dependiente.Telefono
                        </td>
                        <td>
                            @dependiente.Rfc
                        </td>
                        <td>
                            @dependiente.DependienteTipo.Nombre
                        </td>
                        <td class="text-center">
                            <a class="btn btn-primary bi-pencil-square" href="@Url.Action("Form", "EmpleadoDependiente", new { IdDependiente = dependiente.IdDependiente })"></a>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-danger bi-trash" href="@Url.Action("Delete", "EmpleadoDependiente", new { IdDependiente = dependiente.IdDependiente })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
    {

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.material.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tblDependiente').DataTable({
                searching: false,
                "lengthMenu": [[5, 10, 15, 20, -1], [5, 10, 15, 20, "All"]],
                autoWidth: false,
                columnDefs: [
                    {
                        targets: ['_all'],
                        className: 'mdc-data-table__cell',
                    },
                ],
                language: {
                    url: "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json",
                },
            });
        });
    </script>

}

